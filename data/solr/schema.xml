<?xml version="1.0" encoding="UTF-8" ?>
<schema name="spatial" version="1.0">

    <fields>
        <field name="uri" type="string" indexed="true" stored="true" required="true" multiValued="false" />

        <field name="uuid" type="string" indexed="true" stored="false" required="false"/>
        <field name="tenant" type="string" indexed="true" stored="false" required="false"/>
        <field name="collection" type="string" indexed="true" stored="false" required="false"/>
        <field name="status" type="string" indexed="true" stored="false" required="false"/>
        <field name="toBeChecked" type="boolean" indexed="true" stored="false" required="false"/>
        <field name="notation" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        
        <field name="inScheme" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="topConceptOf" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        
        <field name="LexicalLabels" type="string" indexed="true" stored="false" required="false" multiValued="true"/>        
        <field name="prefLabel" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="altLabel" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="hiddenLabel" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        
        <field name="skosXlPrefLabel" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="skosXlAltLabel" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="skosXlHiddenLabel" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        
        <field name="DocumentationProperties" type="string" indexed="true" stored="false" required="false" multiValued="true"/>        
        <field name="note" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="changeNote" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="definition" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="editorialNote" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="example" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="historyNote" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="scopeNote" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        
        <field name="broader" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="narrower" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="related" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="broaderTransitive" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="narrowerTransitive" type="string" indexed="true" stored="false" required="false" multiValued="true"/>

        <field name="broadMatch" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="closeMatch" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="exactMatch" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="mappingRelation" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="narrowMatch" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <field name="relatedMatch" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        
        <dynamicField name="dc_*" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <dynamicField name="dcterms_*" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        
        <!-- Languages -->
        <dynamicField name="LexicalLabels_*" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <dynamicField name="prefLabel_*" type="string" indexed="true" stored="false" required="false" multiValued="false"/>
        <dynamicField name="altLabel_*" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <dynamicField name="hiddenLabel_*" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        
        <dynamicField name="DocumentationProperties_*" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <dynamicField name="noteLabel_*" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <dynamicField name="changeNote_*" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <dynamicField name="definition_*" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <dynamicField name="editorialNote_*" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <dynamicField name="example_*" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <dynamicField name="historyNote_*" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        <dynamicField name="scopeNote_*" type="string" indexed="true" stored="false" required="false" multiValued="true"/>
        
        <!-- universal fields (used internally) -->
        <!-- date -->
        <dynamicField name="d_*" type="date" indexed="true" stored="false" required="false" multiValued="true" />
        <!-- string -->
        <dynamicField name="s_*" type="string" indexed="true" stored="false" required="false" multiValued="true" />
        <!-- search -->
        <dynamicField name="t_*" type="text" indexed="true" stored="false" required="false" multiValued="true" />
        <!-- autocomplete -->
        <dynamicField name="a_*" type="autocomplete" indexed="true" stored="false" required="false" multiValued="true" />
        <!-- int -->
        <dynamicField name="i_*" type="integer" indexed="true" stored="false" required="false" multiValued="true" />
        <!-- boolean -->
        <dynamicField name="b_*" type="boolean" indexed="true" stored="false" required="false" multiValued="true" />
        
        <!-- string for sorting -->
        <dynamicField name="sort_s_*" type="string" indexed="true" stored="false" required="false" multiValued="false" />
        
        <!-- int for sorting -->
        <dynamicField name="sort_i_*" type="integer" indexed="true" stored="false" required="false" multiValued="false" />
        
        <!-- date for sorting -->
        <dynamicField name="sort_d_*" type="date" indexed="true" stored="false" required="false" multiValued="false" />
        
        <!-- default search -->                
        <field name="search" type="string" indexed="true" stored="false" required="false" multiValued="true" />
        
        <copyField source="prefLabel" dest="search" />
        <copyField source="altLabel" dest="search" />
        <copyField source="hiddenLabel" dest="search" />
        
        <field name="_version_" type="long" indexed="true" stored="true" multiValued="false" />
    </fields>

    <defaultSearchField>search</defaultSearchField>

    <uniqueKey>uri</uniqueKey>

    <types>
        <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true" omitNorms="true"/>
        
        <fieldType name="long" class="solr.TrieLongField" omitNorms="true"/>
        
        <fieldType name="string" class="solr.StrField" sortMissingLast="true" />
        
        <fieldType name="date" class="solr.DateField" sortMissingLast="true" omitNorms="true"/>
        
        <fieldType name="integer" class="solr.TrieIntField" omitNorms="true"/>
        
        <fieldType name="autocomplete" class="solr.TextField" positionIncrementGap="100">
            <analyzer type="index">
                <tokenizer class="solr.KeywordTokenizerFactory"/>
                <filter class="solr.LowerCaseFilterFactory"/>
                <filter class="solr.ASCIIFoldingFilterFactory"/>
                <filter class="solr.EdgeNGramFilterFactory" minGramSize="1" maxGramSize="30" side="front"/>
            </analyzer>
            <analyzer type="query">
                <tokenizer class="solr.KeywordTokenizerFactory"/>
                <filter class="solr.LowerCaseFilterFactory"/>
                <filter class="solr.ASCIIFoldingFilterFactory"/>
            </analyzer>
         </fieldType>
        
        <fieldtype name="text" class="solr.TextField" positionIncrementGap="100">
            <analyzer>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.WordDelimiterFilterFactory"
                        generateWordParts="1"
                        generateNumberParts="1"
                        catenateWords="1"
                        catenateNumbers="1"
                        catenateAll="0"/>
                <filter class="solr.LowerCaseFilterFactory"/>
                <filter class="solr.RemoveDuplicatesTokenFilterFactory"/>
                <filter class="solr.ASCIIFoldingFilterFactory"/>
            </analyzer>
        </fieldtype>
    </types>
    
    <solrQueryParser defaultOperator="AND"/>
</schema>